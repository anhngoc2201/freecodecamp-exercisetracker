          p #{title}
        div(class="card-body")
          p Welcome to #{title}
          form( action="/shorten_url/" method="post")
            div(class="form-group")
              label Enter Url:
              input( name="input_url" type="text" maxlength="100" placeholder="Url here" aria-labelledby="input_url")
