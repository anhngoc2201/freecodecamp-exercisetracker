extends layout

block content
  div(class="row justify-content-md-center border border-primary")
    div(class="col-lg-6 border border-primary")
      div(class="card text-center"  style="width: 30rem;")
        div(class="card-header")
          p Create a New User
        div(class="card-body")
          
          form( action="/api/exercise/new-user" method="post")
            div(class="form-group")
              label Enter Url:
              input( name="input_url" type="text" maxlength="100" placeholder="Url here" aria-labelledby="input_url")
              button( type="submit" class="btn btn-primary") Submit
        div(class="card-footer text-muted")
          p 2 days ago
    div(class="col-lg-6 border border-primary")
      div(class="card text-center "  style="width: 30rem;")
        div(class="card-header")
          p Add exercises
        div(class="card-body")
          
          form( action="/api/exercise/add" method="post")
            div(class="form-group")              
              input( name="input_url" type="text" maxlength="100" placeholder="Url here" aria-labelledby="input_url")
              button( type="submit" class="btn btn-primary") Submit
        div(class="card-footer text-muted")
          p 2 days ago
  